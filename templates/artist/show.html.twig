{% block title %}Artist{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #bf6fed;
            font-size: 18px;
            font-family: Arial, sans-serif;
            margin: 2rem;
        }
        table {
            width: 100%;
            max-width: 700px;
            border-collapse: collapse;
            margin: 0 auto;
            background: white;
        }
        th, td {
            border: 1px solid #333;
            padding: 10px 15px;
            text-align: left;
        }
        th {
            background-color: #a77bd4;
            color: white;
        }
    </style>

    <h1 style="text-align:center; color: white;">Artists</h1>

    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Musical Genre</th>
        </tr>
        </thead>
        <tbody>
        {% block artist %}
            <tr>
                <td>{{ artist.name }}</td>
                <td>{{ artist.musicalGenre }}</td>
            </tr>
        {% endblock %}
        </tbody>
    </table>
{% endblock %}
