{% extends 'base.html.twig' %}

{% block title %}Festivals for {{ artist.name }}{% endblock %}

{% block body %}
    <center>
        <h1>Festivals Featuring {{ artist.name }}</h1>

        {% if festivals is empty %}
            <p>This artist isn't participating in any festivals.</p>
        {% else %}
            <ul style="list-style: none; padding: 0;">
                {% for festival in festivals %}
                    <li>
                        <a href="{{ path('festival_lineup', {'id': festival.id}) }}">
                            {{ festival.name }} ({{ festival.startDate ? festival.startDate|date('Y-m-d') : 'N/A' }})
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        <a class="back-link" href="{{ path('artist_index') }}">Back to Artists List</a>
    </center>
{% endblock %}
