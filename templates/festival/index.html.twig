{% extends 'base.html.twig' %}

{% block title %}Festivals List{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #bf6fed;
            font-size: 18px;
            font-family: Arial, sans-serif;
            margin: 2rem;
        }
        table {
            width: 100%;
            max-width: 700px;
            border-collapse: collapse;
            margin: 0 auto;
            background: white;
        }
        th, td {
            border: 1px solid #333;
            padding: 10px 15px;
            text-align: left;
        }
        th {
            background-color: #a77bd4;
            color: white;
        }
    </style>

    <h1 style="text-align:center; color: white;">Festivals</h1>

    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        {% for festival in festivals %}
            <tr>
                <td>{{ festival.name }}</td>
                <td>{{ festival.location }}</td>
                <td>{{ festival.startDate ? festival.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ festival.endDate ? festival.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ festival.price }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No festivals found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
