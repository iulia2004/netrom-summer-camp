{% block title %}Artists{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #bf6fed;
            font-size: 18px;
            font-family: Arial, sans-serif;
            margin: 2rem;
        }
        table {
            width: 100%;
            max-width: 700px;
            border-collapse: collapse;
            margin: 0 auto;
            background: white;
        }
        th, td {
            border: 1px solid #333;
            padding: 10px 15px;
            text-align: left;
        }
        th {
            background-color: #a77bd4;
            color: white;
        }
    </style>

    {% if festival is defined %}
        <h1 style="text-align:center; color: white;">Artists at {{ festival.name }}</h1>
    {% else %}
        <h1 style="text-align:center; color: white;">Artists</h1>
    {% endif %}

    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Musical Genre</th>
        </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.name }}</td>
                <td>{{ artist.musicalGenre }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">No artists found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
