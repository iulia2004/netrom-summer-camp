{% extends 'base.html.twig' %}

{% block title %}Purchases List{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #bf6fed;
            font-size: 18px;
            font-family: Arial, sans-serif;
            margin: 2rem;
        }
        table {
            width: 100%;
            max-width: 700px;
            border-collapse: collapse;
            margin: 0 auto;
            background: white;
        }
        th, td {
            border: 1px solid #333;
            padding: 10px 15px;
            text-align: left;
        }
        th {
            background-color: #a77bd4;
            color: white;
        }
    </style>

    <h1 style="text-align:center; color: white;">Purchases</h1>

    <table>
        <thead>
        <tr>
            <th>User</th>
            <th>Festival</th>
        </tr>
        </thead>
        <tbody>
        {% for purchase in purchases %}
            <tr>
                <td>{{ purchase.user.username ?? 'N/A' }}</td>
                <td>{{ purchase.festival.name ?? 'N/A' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">No purchases found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
