{% block title %}Users List{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #bf6fed;
            font-size: 18px;
            font-family: Arial, sans-serif;
            margin: 2rem;
        }
        table {
            width: 100%;
            max-width: 700px;
            border-collapse: collapse;
            margin: 0 auto;
            background: white;
        }
        th, td {
            border: 1px solid #333;
            padding: 10px 15px;
            text-align: left;
        }
        th {
            background-color: #a77bd4;
            color: white;
        }
        tr:hover {
            background-color: #f0f0f0;
        }
    </style>

    <h1 style="text-align:center; color: white;">Users</h1>

    <table>
        <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Token</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|join(', ') : 'N/A' }}</td>
                <td>{{ user.token is defined ? user.token : 'â€”' }}</td>
                <td>
                    <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" style="text-align:center;">No users found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
